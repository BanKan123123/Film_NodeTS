{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "typeRoots": ["./node_modules/@types", "./src/types"],
    "paths": {
      "*": ["./node_modules/*", "./src/config/*"],
      "src/controller/*": ["./src/controller/*"],
      "src/middleware/*": ["./src/middleware/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}